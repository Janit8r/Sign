<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_pos_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/detection_step_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/detection_step_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shake_head" />

        <TextView
            android:id="@+id/detection_step_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detection_step_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text="眨眼"
            android:textColor="#ffffffff"
            android:textSize="25dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp" >

        <com.faceplusplus.hetaolivenessdetection.view.CircleProgressBar
            android:id="@+id/detection_circle"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/detection_step_timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="10"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </RelativeLayout>

</RelativeLayout>