<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_rootRel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextureView
        android:id="@+id/main_textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.faceplusplus.hetaolivenessdetection.view.AutoRatioImageview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/main_camera_mask" />

    <com.faceplusplus.hetaolivenessdetection.FaceMask
        android:id="@+id/facemask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.faceplusplus.hetaolivenessdetection.view.AutoRatioImageview
        android:id="@+id/main_head_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_head_mask" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_head_mask"
        android:background="@drawable/main_gradient_back" />
    <ImageView
        android:layout_marginRight="20dp"
        android:src="@drawable/faceppinside"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <RelativeLayout
        android:id="@+id/main_circle_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#7f000000" >

        <ImageView
            android:id="@+id/main_circle_progress_bar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/main_circle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/main_time"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/main_start_timeout"
            android:gravity="center"
            android:padding="10dp"
            android:text="start"
            android:textColor="#ffffffff"
            android:textSize="25dp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/main_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerInParent="true" />

    <include
        android:id="@+id/main_first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/detection_step"
        android:visibility="visible"
         />

    <include
        android:id="@+id/main_second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/detection_step" />

    <LinearLayout
        android:id="@+id/main_tips_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/main_bottom_tips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请将正脸置于取景框内"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_bottom_tips_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="请在光线充足的情况下进行检测"
            android:textColor="#ffffffff"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/main_bottom_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/main_start" />
    </LinearLayout>

</RelativeLayout>