<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading_background"
    android:orientation="vertical" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.faceplusplus.hetaolivenessdetection.view.RotaterView
                android:id="@+id/result_rotater"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/result_status"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/result_success" />


        </RelativeLayout>
         <TextView
             android:id="@+id/result_text_result"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="40dp"
             android:gravity="center"
             android:text="success"
             android:textColor="#ffffffff"
             android:textSize="30dp" />

         <TextView
             android:id="@+id/result_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#ff000000"
             android:textSize="20dp"
             android:visibility="gone" />
        <LinearLayout
            android:id="@+id/activity_result_imageLinear"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/result_img1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_margin="15dp"
                android:src="@drawable/head_icon"
                android:background="@drawable/result_img_background" />

            <ImageView
                android:id="@+id/result_img2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_margin="15dp"
                android:src="@drawable/head_icon"
                android:background="@drawable/result_img_background"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/result_img3"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_margin="15dp"
                android:src="@drawable/head_icon"
                android:background="@drawable/result_img_background"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip" >
            <TextView
                android:id="@+id/result_infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip" 
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/result_confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffffff"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/activity_result_bottomLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/result_next"
            style="@style/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="返回首页" />

        <Button
            android:id="@+id/result_redolivenessdetection"
            style="@style/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="重新验证活体" />
    </LinearLayout>
</RelativeLayout>