<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.hyg.ble"
        version="0.7.0">

  <name>Hello</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/ble.js" target="js/ble.js"/>

  <js-module src="www/ble.js" name="ble">
    <clobbers target="ble" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Ble">
        <param name="android-package" value="com.hyg.ble.Ble"/>
      </feature>
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />
      <uses-permission android:name="android.permission.BLUETOOTH" />
      <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    </config-file>
    <source-file src="src/android/Ble.java" target-dir="src/com/hyg/ble/"/>
  </platform>

  <platform name="ios">

    <config-file target="config.xml" parent="/*">
      <feature name="Ble">
        <param name="ios-package" value="Ble" />
      </feature>
    </config-file>
    <framework src="CoreBluetooth.framework" />
    <header-file src="src/ios/Ble.h" target-dir="BlePlugin"/>
    <source-file src="src/ios/Ble.m" target-dir="BlePlugin"/>
  </platform>

  <platform name="wp7">
    <source-file src="src/wp7/Hello.cs"/>
  </platform>

</plugin>
